---
import { H4 } from "ui";
import TheForm from "../../TheForm.astro";
---

<div class="modal-overlay">
  <div class="modal container" data-template="callback">
    <div class="modal-form">
      <div class="btn-close" data-modal="close"></div>
      <TheForm />
    </div>
  </div>

  <div class="modal container" data-template="success">
    <div class="modal-form">
      <div class="btn-close" data-modal="close"></div>
      <TheForm success={true} />
    </div>
  </div>
</div>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  /* Overlay */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease;

    &.show {
      opacity: 1;
      visibility: visible;
    }
  }

  /* Modal */
  .modal {
    width: 100%;
    transform: scale(0.8);
    opacity: 0;
    transition: all 0.3s ease;
    display: none;
    align-items: center;
    justify-content: center;

    &.show {
      transform: scale(1);
      opacity: 1;
    }
  }

  .modal-form {
    position: relative;
    width: 100%;

    .btn-close {
      position: absolute;
      top: rem(25);
      right: rem(25);
      z-index: 2;
      width: rem(24);
      height: rem(24);
      background: url('data:image/svg+xml,<svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 1L16.5 16.5" stroke="%23ffffff" /><path d="M16.5 1L1 16.5" stroke="%23ffffff" /></svg>')
        center/contain no-repeat;
      cursor: pointer;

      @include media("sm") {
        top: rem(-45);
        right: rem(5);
      }
    }

    .form {
      min-height: rem(465);

      @include media("sm") {
        min-height: auto;
      }
    }
  }
</style>
