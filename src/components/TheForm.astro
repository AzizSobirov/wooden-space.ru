---
import { H2, H3, P, Image } from "ui";

interface Props {
  success?: boolean;
  id?: string;
  variant?: "primary" | "secondary";
}

const { success = false } = Astro.props;
---

<div class="form">
  {
    success ? (
      <>
        <div class="form-content">
          <H2>Спасибо за Вашу заявку!</H2>
          <div class="text-p">
            Наш менеджер скоро свяжется с Вами и проконсультирует , а также
            ответит на все интересующие вопросы.
          </div>
        </div>
      </>
    ) : (
      <>
        <div class="form-content">
          <H2>Есть вопросы по продукции?</H2>
          <P>
            Заполните форму ниже и наш менеджер проконсультирует Вас и ответит
            на все интересующие вопросы.
          </P>

          <form class="the-form">
            <input type="text" name="link" placeholder="Ваше имя" required />
            <input
              type="text"
              name="phone"
              placeholder="Ваш номер телефона"
              required
            />
            <button class="btn" type="submit">
              отправить заявку
            </button>
          </form>

          <div class="text-xs">
            Отправляя заявку я даю
            <a href="#">согласие на обработку персональных данных</a>
          </div>
        </div>
      </>
    )
  }

  <div class="form-img">
    <Image src="form-img-1.png" />
  </div>
</div>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .form {
    position: relative;
    padding: rem(40);
    width: 100%;
    color: #fff;
    background: var(--primary);
    border-radius: rem(25);
    display: flex;
    align-items: center;

    &::before {
      content: "";
      position: absolute;
      top: rem(-25);
      left: rem(-25);
      z-index: -1;
      width: 100%;
      height: 100%;
      border: rem(1) solid #d7d7d7;
      border-radius: rem(35);
      pointer-events: none;
    }

    @include media("sm") {
      padding: rem(20);
      gap: rem(20);

      &::before {
        top: rem(-10);
        left: rem(-10);
        border-radius: rem(30);
      }
    }

    &-content {
      position: relative;
      z-index: 2;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(15);

      .text-p {
        margin: rem(10) 0 rem(20);
        width: 100%;
        max-width: rem(570);

        @include media("lg") {
          max-width: rem(470);
        }
        @include media("xs") {
          margin: 0 0 rem(10);
        }
      }

      form {
        width: 100%;
        max-width: rem(400);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: rem(25);

        @include media("sm") {
          margin-top: 0;
          max-width: 100%;
        }
        @include media("xs") {
          gap: rem(15);
        }
      }

      input {
        padding: 0 rem(20);
        width: 100%;
        height: rem(48);
        color: #fff;
        font-size: 1rem;
        font-weight: 300;
        border: rem(1) solid #fff;
        border-radius: 9999px;

        &::placeholder {
          color: #fff;
          font-weight: 300;
          text-transform: uppercase;
          transition: var(--transition-ease);
        }

        &:focus {
          &::placeholder {
            transform: translateX(-50%);
          }
        }
      }

      button {
        margin-top: rem(10);
        width: rem(202);
        height: rem(48);
        color: var(--primary);
        font-weight: 300;
        background: #fff;
        border-radius: 9999px;

        &:hover {
          opacity: 0.8;
        }

        @include media("xs") {
          margin-top: rem(5);
        }
      }

      .text-xs {
        font-size: rem(12);
        font-weight: 300;

        a {
          text-decoration: underline dotted;
        }
      }
    }

    &-img {
      position: absolute;
      top: 0;
      right: 0;
      height: 100%;
      pointer-events: none;
      border-top-right-radius: rem(25);
      overflow: hidden;

      @include media("sm") {
        width: 100%;
        height: 100%;
      }

      &::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        transform: translate(0%, -12%);
        width: rem(750);
        height: rem(750);
        background: url(/assets/img/wood-circle.svg) center/contain no-repeat;
        pointer-events: none;
        opacity: 0.4;

        @include media("lg") {
          width: rem(500);
          height: rem(500);
        }
        @include media("sm") {
          left: auto;
          right: 0;
          transform: translate(30%, -35%);
          width: rem(350);
          height: rem(350);
        }
      }

      img {
        position: relative;
        max-height: 100%;
        object-fit: contain;
        object-position: top right;

        @include media("xl") {
          max-height: 80%;
        }
        @include media("lg") {
          max-height: 70%;
        }
        @include media("sm") {
          display: none;
        }
      }
    }
  }
</style>
