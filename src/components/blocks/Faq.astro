</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .faq {
    position: relative;

    .container {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(50);

      @include media("lg") {
        gap: rem(20);
      }
    }

    &__list {
      padding-right: rem(20);
      width: 100%;
      max-width: rem(715);
      max-height: rem(405);
      display: flex;
      flex-direction: column;
      overflow: auto;

      &::-webkit-scrollbar {
        width: rem(10);
      }

      &::-webkit-scrollbar-track {
        background: #fff;
        border-radius: 9999px;
      }

      &::-webkit-scrollbar-thumb {
        background: var(--primary);
        border-radius: 9999px;
      }

      @include media("xl") {
        max-width: rem(580);
      }
      @include media("lg") {
        padding-right: 0;
        max-width: 100%;
        max-height: 100%;
      }
    }

    &__img {
      position: absolute;
      bottom: rem(50);
      left: 50%;
      transform: translate(20%, 0);
      height: rem(468);
      border-radius: rem(75) 0 0 0;
      overflow: hidden;

      @include media("xl") {
        height: rem(340);
      }
      @include media("lg") {
        display: none;
      }

      &::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba($color: #fff, $alpha: 0.35);
      }

      &::after {
        content: "";
        position: absolute;
        margin: rem(24);
        top: 0;
        left: 0;
        width: calc(100% - rem(48));
        height: calc(100% - rem(48));
        border: rem(6) solid var(--primary);
        border-radius: inherit;
      }

      img {
        height: 100%;
        width: auto;
        object-fit: cover;
      }
    }
  }
</style>
