---
import { Section, Header, P, Image, Icon, Button } from "ui";
import TheForm from "../TheForm.astro";

interface Props {
  variant?: "primary" | "secondary";
  type?: "calculate" | "default";
}

const { variant = "primary", type = "default" } = Astro.props;
---

<!-- Application -->
<Section name="application">
  <TheForm variant={variant} type={type} />
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .application {
    position: relative;
  }
</style>
