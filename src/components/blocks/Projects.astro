---
import { Section, Title, H2, H3, P, Image, Icon, Button, Header } from "ui";
import { projects } from "@/store";

interface Props {
  isMain?: boolean;
}

const { isMain = false } = Astro.props;
---

<!-- Projects -->
<Section name="projects">
  <Header
    title="Реализованные проекты"
    desc="Гордимся каждым реализованным объектом и благодарим наших заказчиков за проявленное доверие."
  />

  <div class="projects__list">
    {
      projects.slice(0, 6).map((project) => (
        <div class="card">
          <a class="card__link" href="/project" title={project.name} />

          <div class="card__img">
            <Image src={project.image} />
          </div>

          <div class="card__content">
            <span>
              Подробнее
              <svg
                width="134"
                height="8"
                viewBox="0 0 134 8"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M133.854 4.35355C134.049 4.15829 134.049 3.84171 133.854 3.64645L130.672 0.464466C130.476 0.269204 130.16 0.269204 129.964 0.464466C129.769 0.659728 129.769 0.976311 129.964 1.17157L132.793 4L129.964 6.82843C129.769 7.02369 129.769 7.34027 129.964 7.53553C130.16 7.7308 130.476 7.7308 130.672 7.53553L133.854 4.35355ZM0.5 4.5H133.5V3.5H0.5V4.5Z"
                  fill="white"
                />
              </svg>
            </span>
            <H3>{project.name}</H3>
          </div>
        </div>
      ))
    }
  </div>

  <Button href="/portfolio" variant="outline">все работы</Button>
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .projects {
    position: relative;

    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translate(6%, 50%);
      z-index: -2;
      width: rem(750);
      height: rem(750);
      background: url(/assets/img/wood-circle.svg) center/contain no-repeat;
      pointer-events: none;

      @include media("lg") {
        width: rem(500);
        height: rem(500);
      }
      @include media("sm") {
        left: -25%;
        width: rem(350);
        height: rem(350);
      }
    }

    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: rem(30);
    }

    &__list {
      margin-top: rem(20);
      width: 100%;
      columns: 3;
      column-gap: rem(20);
      @include space-y(30px);

      @include media("lg") {
        columns: 2;
      }
      @include media("sm") {
        margin-top: 0;
        column-gap: rem(10);
        @include space-y(10px);
      }
    }

    .card {
      position: relative;
      border-radius: rem(25);
      overflow: hidden;

      @include media("sm") {
        border-radius: rem(15);
      }

      &__link {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2;
        width: 100%;
        height: 100%;
      }

      &__img {
        width: 100%;

        img {
          width: 100%;
          object-fit: cover;
        }
      }

      &__content {
        position: absolute;
        top: 0;
        left: 0;
        transition: var(--transition-ease);
        opacity: 0;
        padding: rem(32);
        height: 100%;
        width: 100%;
        color: #fff;
        background: rgba(194, 155, 93, 0.9);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: rem(20);

        @include media("sm") {
          padding: rem(20);
        }

        &::before {
          content: "";
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          width: calc(100% - 30px);
          height: calc(100% - 30px);
          border: rem(1) solid #fff;
          border-radius: rem(15);
          pointer-events: none;

          @include media("sm") {
            width: calc(100% - 15px);
            height: calc(100% - 15px);
            border-radius: rem(10);
          }
        }

        span {
          display: flex;
          align-items: center;
          justify-content: flex-start;
          gap: rem(10);

          @include media("sm") {
            display: none;
          }
        }

        .text-h3 {
          margin-top: auto;
          color: inherit;
          font-family: var(--font-secondary);

          @include media("xs") {
            font-size: rem(16);
          }
        }
      }

      &:hover .card__content {
        opacity: 1;
      }
    }
  }
</style>
